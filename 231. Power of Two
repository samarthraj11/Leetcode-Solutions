class Solution {
public:
    bool isPowerOfTwo(int n) {
        if(n == 0)
        {
            return 0;
        }
        if(n < 0)
        {
            return 0;
        }
        n = abs(n);
        while(n > 1)
        {
          
            if(n%2)
            {
                return 0;
            }
             n = n/2;
        }
        
       return 1;
        
    }
};
