class Solution {
public:
    int maxProduct(vector<int>& nums) {
        
        int n = nums.size();
        
        int x = 1, y = 1;
        int ans = -100000;
        
        for(int i=0;i<n;i++)
        {
            x *= nums[i];
            ans = max(ans,x);
            if(x == 0)
            {
                x = 1;
            }
        }
        
        for(int i=n-1;i>=0;i--)
        {
            y *= nums[i];
            ans = max(ans,y);
            //agar y zero hogya mtlb pura prod zero ho rha h to max 
            //to store ho hi gya ab bas curr_prod ko 1 se update krdena h 
            if(y == 0)
            {
                y = 1;
            }
        }
        
        
        return ans;
        
    }
};
